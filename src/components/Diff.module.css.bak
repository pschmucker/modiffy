.diff > ul {
    margin: 0;
}

.diff .node.object,
.diff .node.array {
    position: relative;
    list-style-type: disclosure-open;
}

.diff .node.object.collapsed,
.diff .node.array.collapsed {
    list-style-type: disclosure-closed;
}

.diff .node.object.collapsed > ul,
.diff .node.array.collapsed > ul {
    display: none;
}

.diff .node.object.collapsed > .property::after,
.diff .node.array.collapsed > .property::after {
    content: '';
}

.diff .node.leaf {
    display: flex;
    align-items: flex-start;
    margin-top: 0.25em;
    margin-bottom: 0.5em;
    margin-left: -2rem;
}

.diff .node > span + span {
    margin-left: 0.5em;
}

.diff .node > .type {
    text-transform: uppercase;
    color: white;
    font-size: 0.75em;
    font-weight: 600;
    padding: 2px 4px;
    border-radius: 3px;
}

.diff .node.removed > .type {
    background-color: red;
}

.diff .node.added > .type {
    background-color: green;
}

.diff .node.new > .type {
    background-color: blue;
}

.diff .node.unchanged > .type {
    background-color: grey;
}

.diff .node.updated > .type {
    background-color: darkorange;
}

.diff .node > .property {
    font-style: italic;
    color: grey;
}

.diff .node > .property::after {
    content: ':';
}

.diff .node > .property:last-child::after {
    content: ':';
}

.diff .node > .value.old > .content {
    text-decoration: line-through;
}

.diff .node > .value.new > .content {
    color: blue;
    font-weight: 500;
}

.diff .node > .value > .list::before {
    content: '[ ';
}

.diff .node > .value > .list::after {
    content: ' ]';
}

.diff .node > .value > .list > span + span::before {
    content: ', '
}

.diff .node > .toggle-handler {
    position: absolute;
    display: block;
    top: -0.25em;
    left: -2rem;
    right: 0;
    height: 1.25em;
    margin: 2px 0;
    border-radius: 2px;
    cursor: pointer;
}

.diff .placeholder {
    color: white;
    font-size: 0.7em;
    font-weight: 600;
    font-family: monospace;
    text-transform: uppercase;
    padding: 0 4px;
    border-radius: 4px;
}

.diff .placeholder.empty {
    background-color: #ccc;
}

.diff .placeholder.empty::after {
    content: 'empty';
}

.diff .placeholder.truncated {
    background-color: #ccc;
}

.diff .placeholder.truncated::after {
    content: 'truncated';
}

.diff .placeholder.object {
    background-color: #222;
    cursor: help;
}

.diff .placeholder.object::after {
    content: 'object';
}
